{% extends 'base.html.twig' %}

{% block title %}Admin !{% endblock %}

{% block main %}

{% for flash in app.flashes('success') %}
    {{ flash }}
{% endfor %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Date de création</th>
      <th scope="col">Catégorie(s)</th>
      <th scope="col">User</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {% for post in posts %}
        <tr>
            <th scope="row">{{post.id}}</th>
            <td>{{post.title}}</td>
            <td>{{post.dateCreate|date('d/M/Y')}}</td>
            <td>
                {% for category in post.categories %}
                   {{ category.title }} -
                {% endfor %}
            </td>
            <td>{{ post.user.fullname }}</td>
            <td><a href="{{ path('admin_posts_update', {'id' : post.id}) }}">Modifier</a></td>
            <td><a href="{{ path('admin_posts_remove', {'id' : post.id}) }}">Supprimer</a></td>
        </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
